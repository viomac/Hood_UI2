<!-- *****************  Main  ******************** -->
    <style name="MainLogo">
        <item name="android:layout_marginTop">60dp</item>
        <item name="android:layout_width">220dp</item>
        <item name="android:layout_height">200dp</item>
        <item name="android:src">@drawable/ic_logo_200dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="MainButtonsContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">#b3b6f28f</item>
    </style>

    <style name="MainButtons">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#ff4C4C4C</item>
        <item name="android:background">#00ffffff</item>
    </style>

    <style name="VerticalLineSeparator">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/vertical_line</item>
    </style>

    <!-- *************  ErrorAlert  ************* -->
    <style name="ErrorAlert">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#fffff085</item>
        <item name="android:textSize">6.5pt</item>
    </style>

    <!-- *************  Login and Signup  ************* -->

    <style name="FieldContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">bottom</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>

    <style name="TextFields">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#ff4C4C4C</item>
        <item name="android:textSize">9pt</item>
        <item name="android:background">#00ffffff</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:layout_marginRight">30dp</item>
        <item name="android:textColorHint">#ffc2c6c0</item>
    </style>

    <style name="Icons">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">25dp</item>
    </style>

    <style name="HorizontalSeparator">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@drawable/horizontal_line</item>
    </style>
    
    <style name="ContinueButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">#ffB6F28F</item>
        <item name="android:textColor">#ff4C4C4C</item>
    </style>

    <style name="ForgotPassword">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#fffff085</item>
        <item name="android:textSize">6.5pt</item>
    </style>

    <!-- *************  Product Items  ************* -->
    <style name="ProductItemText">
        <item name="android:gravity">right</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="AddIcon">
        <item name="android:layout_width">22dp</item>
        <item name="android:layout_height">22dp</item>
        <item name="android:background">#00ffffff</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="ProductCounter">
        <item name="android:layout_width">35dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">#ffB6f28f</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:inputType">number</item>
        <item name="android:textSize">27sp</item>
        <item name="android:paddingLeft">3dp</item>
    </style>

</resources>
