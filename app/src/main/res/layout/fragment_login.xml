<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/blur_bg"
    tools:context="com.example.richit.hood_ui.Login">

    <LinearLayout android:id="@+id/email_login"
        style="@style/FirstFieldContainer">
        <ImageView android:src="@drawable/email"
            android:layout_weight="0.7"
            style="@style/Icons"/>
        <EditText android:hint="E-mail"
            android:inputType="textEmailAddress"
            android:layout_weight="0.3"
            style="@style/TextFields"/>
    </LinearLayout>
    <ImageView android:id="@+id/EmailSeparator"
        android:layout_below="@id/email_login"
        style="@style/HorizontalSeparator"/>

    <LinearLayout android:id="@+id/Password_login"
        android:layout_below="@+id/EmailSeparator"
        style="@style/FieldContainer">
        <ImageView android:src="@drawable/password"
            android:layout_weight="0.7"
            style="@style/Icons"/>
        <EditText android:hint="Password"
            android:inputType="textPassword"
            android:layout_weight="0.3"
            style="@style/TextFields" />
    </LinearLayout>
    <ImageView android:id="@+id/PasswordSeparator"
        android:layout_below="@id/Password_login"
        style="@style/HorizontalSeparator"/>
    <TextView  android:text="Olvidé mi contraseña"
        android:id="@+id/ErrorText"
        android:layout_below="@+id/PasswordSeparator"
        android:gravity="end"
        android:paddingRight="30dp"
        style="@style/ErrorAlert"/>

    <Button android:text="Continuar"
        android:layout_alignParentBottom="true"
        style="@style/ContinueButton" />

</RelativeLayout>
